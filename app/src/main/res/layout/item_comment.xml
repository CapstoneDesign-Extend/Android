<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingVertical="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_linearlayout_border_bottom">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_comment_profile"
            android:padding="3dp"
            android:layout_gravity="center_vertical"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_comment_profile"
            app:tint="@color/colorAccentTest"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_comment_author"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:paddingLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_comment_like"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_round_border"
                android:padding="5dp"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/icon_heart_gicon"/>
            <ImageView
                android:layout_marginLeft="3dp"
                android:id="@+id/iv_comment_more"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_round_border"
                android:padding="5dp"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/icon_more_gicon"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment_contents"
        android:paddingLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contents Contents Contents Contents Contents"
        android:textColor="@color/black"/>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="00/00" />

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:text="00:00"
            android:textSize="14dp" />
        <LinearLayout
            android:id="@+id/wrapper_heartCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icon_heart"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="3dp"
                android:layout_width="13dp"
                android:layout_height="13dp"/>
            <TextView
                android:id="@+id/tv_comment_heart_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorEveryTime"
                android:text="00"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>