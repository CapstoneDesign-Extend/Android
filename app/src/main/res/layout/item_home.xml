<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="1dp"
    android:layout_marginVertical="5dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="18dp"
    android:background="@drawable/shape_round_border">

    <LinearLayout
        android:id="@+id/home_board_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_home_board_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Board Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="more >"
            android:visibility="visible"
            android:textColor="@color/colorAccentTest" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/home_board_wrapper1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="7dp">

        <TextView
            android:id="@+id/tv_home_board_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Title 1"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/tv_home_board_data1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Post Content 1"
            android:textSize="13dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/home_board_wrapper2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="7dp">

        <TextView
            android:id="@+id/tv_home_board_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Post Title 2"
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/tv_home_board_data2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Post Content 2"
            android:textSize="13dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/home_board_wrapper3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="7dp">

        <TextView
            android:id="@+id/tv_home_board_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="작성된 게시글이 없습니다 :( "
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/tv_home_board_data3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="가장 먼저 새로운 글을 작성해보세요!"
            android:textSize="13dp"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/home_board_wrapper4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="7dp">

        <TextView
            android:id="@+id/tv_home_board_name4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="정보게시판"
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/tv_home_board_data4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="2020년도 상반기 서울시 학자금대출 이자지원 사업"
            android:textSize="13dp"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/home_board_wrapper5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="7dp">

        <TextView
            android:id="@+id/tv_home_board_name5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="홍보게시판"
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/tv_home_board_data5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="체험단 모집"
            android:textSize="13dp"/>
    </LinearLayout>



</LinearLayout>