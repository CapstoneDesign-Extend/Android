<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_post_profile"
            android:layout_margin="7dp"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/icon_pen"/>
        <LinearLayout
            android:paddingLeft="3dp"
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_post_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_post_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="00/00" />
                <TextView
                    android:id="@+id/tv_post_time"
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="00:00" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_post_title"
        android:paddingLeft="5dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingBottom="10dp"
        android:text="Content"
        android:textColor="@color/black" />

    <LinearLayout
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/icon_heart"
            android:layout_marginTop="1dp"
            android:layout_marginRight="3dp"
            android:layout_width="13dp"
            android:layout_height="13dp"/>
        <TextView
            android:id="@+id/tv_heart_count"
            android:layout_marginRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorEveryTime"
            android:text="00"/>
        <ImageView
            android:src="@drawable/icon_chat"
            android:layout_marginTop="0.7dp"
            android:layout_marginRight="3dp"
            android:layout_width="13dp"
            android:layout_height="13dp"/>
        <TextView
            android:id="@+id/tv_chat_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccentTest"
            android:text="00"/>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="3dp"
        android:paddingVertical="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_like"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_round_border"
            android:textAllCaps="false"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:textSize="13dp"
            android:text="Like"/>
        <Button
            android:id="@+id/btn_scrap"
            android:background="@drawable/shape_round_border"
            android:textAllCaps="false"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:textSize="13dp"
            android:text="Scrap"/>

    </LinearLayout>

</LinearLayout>