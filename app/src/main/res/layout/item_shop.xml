<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_wrapper"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="15dp"
    android:background="@drawable/shape_linearlayout_border_bottom">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/img_shop_sample" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/tv_shop_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="생화공 미생물학 에센스"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="03/15"/>
            <TextView
                android:id="@+id/tv_shop_isANON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="익명"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_shop_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="1,000,000원"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <LinearLayout
                android:id="@+id/wrapper_heartCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical">
                <ImageView
                    android:src="@drawable/icon_heart"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="3dp"
                    android:layout_width="13dp"
                    android:layout_height="13dp"/>
                <TextView
                    android:id="@+id/tv_heart_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorEveryTime"
                    android:text="10"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/wrapper_chatCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical">
                <ImageView
                    android:src="@drawable/icon_chat"
                    android:layout_marginTop="0.7dp"
                    android:layout_marginRight="3dp"
                    android:layout_width="13dp"
                    android:layout_height="13dp"/>
                <TextView
                    android:id="@+id/tv_chat_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccentTest"
                    android:text="5"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>